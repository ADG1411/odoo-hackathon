<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Maintenance Team Tree View -->
    <record id="view_maintenance_team_tree" model="ir.ui.view">
        <field name="name">gearguard.maintenance.team.tree</field>
        <field name="model">gearguard.maintenance.team</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="specialty"/>
                <field name="team_leader_id" widget="many2one_avatar_user"/>
                <field name="member_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="equipment_count"/>
                <field name="open_request_count"/>
            </tree>
        </field>
    </record>

    <!-- Maintenance Team Kanban View -->
    <record id="view_maintenance_team_kanban" model="ir.ui.view">
        <field name="name">gearguard.maintenance.team.kanban</field>
        <field name="model">gearguard.maintenance.team</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard o_maintenance_team_kanban">
                <field name="name"/>
                <field name="color"/>
                <field name="team_leader_id"/>
                <field name="equipment_count"/>
                <field name="open_request_count"/>
                <field name="request_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                    <div class="o_secondary" t-if="record.specialty.raw_value">
                                        <field name="specialty"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6 o_kanban_primary_left">
                                        <button class="btn btn-primary" name="action_view_requests" type="object">
                                            <span><t t-esc="record.open_request_count.value"/> Open Requests</span>
                                        </button>
                                    </div>
                                    <div class="col-6 o_kanban_primary_right">
                                        <div class="mb-2">
                                            <span class="badge text-bg-secondary">
                                                <i class="fa fa-cogs me-1"/>
                                                <t t-esc="record.equipment_count.value"/> Equipment
                                            </span>
                                        </div>
                                        <div t-if="record.team_leader_id.raw_value">
                                            <span>Leader: </span>
                                            <field name="team_leader_id" widget="many2one_avatar_user"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <div class="o_kanban_card_manage_section o_kanban_manage_reports">
                                    <div role="menuitem">
                                        <a name="action_view_requests" type="object">Maintenance Requests</a>
                                    </div>
                                    <div role="menuitem">
                                        <a name="action_view_equipment" type="object">Equipment</a>
                                    </div>
                                </div>
                                <div class="o_kanban_card_manage_section o_kanban_manage_new">
                                    <field name="color" widget="kanban_color_picker"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Maintenance Team Form View -->
    <record id="view_maintenance_team_form" model="ir.ui.view">
        <field name="name">gearguard.maintenance.team.form</field>
        <field name="model">gearguard.maintenance.team</field>
        <field name="arch" type="xml">
            <form string="Maintenance Team">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_requests" type="object" class="oe_stat_button" icon="fa-wrench">
                            <field name="open_request_count" widget="statinfo" string="Open Requests"/>
                        </button>
                        <button name="action_view_equipment" type="object" class="oe_stat_button" icon="fa-cogs">
                            <field name="equipment_count" widget="statinfo" string="Equipment"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Team Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Team Information">
                            <field name="specialty" placeholder="e.g., Mechanical, Electrical, IT"/>
                            <field name="team_leader_id" widget="many2one_avatar_user"/>
                            <field name="color" widget="color_picker"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Description">
                            <field name="description" nolabel="1" placeholder="Team description..."/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Team Members" name="members">
                            <field name="member_ids" widget="many2many_tags" options="{'color_field': 'color'}">
                                <tree>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Maintenance Team Search View -->
    <record id="view_maintenance_team_search" model="ir.ui.view">
        <field name="name">gearguard.maintenance.team.search</field>
        <field name="model">gearguard.maintenance.team</field>
        <field name="arch" type="xml">
            <search string="Maintenance Teams">
                <field name="name"/>
                <field name="specialty"/>
                <field name="team_leader_id"/>
                <field name="member_ids"/>
                <separator/>
                <filter string="Archived" name="filter_archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Team Leader" name="group_leader" context="{'group_by': 'team_leader_id'}"/>
                    <filter string="Specialty" name="group_specialty" context="{'group_by': 'specialty'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Maintenance Team Action -->
    <record id="action_maintenance_team" model="ir.actions.act_window">
        <field name="name">Maintenance Teams</field>
        <field name="res_model">gearguard.maintenance.team</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first maintenance team
            </p>
            <p>
                Define specialized teams like Mechanics, Electricians, IT Support to handle different types of maintenance.
            </p>
        </field>
    </record>
</odoo>
