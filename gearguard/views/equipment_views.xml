<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Equipment Tree View -->
    <record id="view_equipment_tree" model="ir.ui.view">
        <field name="name">gearguard.equipment.tree</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" optional="show"/>
                <field name="name"/>
                <field name="serial_number"/>
                <field name="category_id"/>
                <field name="department_id"/>
                <field name="employee_id"/>
                <field name="maintenance_team_id"/>
                <field name="location"/>
                <field name="equipment_status" widget="badge" decoration-success="equipment_status == 'operational'" decoration-warning="equipment_status == 'maintenance'" decoration-danger="equipment_status == 'scrapped'"/>
                <field name="warranty_status" widget="badge" decoration-success="warranty_status == 'valid'" decoration-danger="warranty_status == 'expired'"/>
            </tree>
        </field>
    </record>

    <!-- Equipment Kanban View -->
    <record id="view_equipment_kanban" model="ir.ui.view">
        <field name="name">gearguard.equipment.kanban</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="code"/>
                <field name="name"/>
                <field name="serial_number"/>
                <field name="category_id"/>
                <field name="equipment_status"/>
                <field name="maintenance_team_id"/>
                <field name="open_maintenance_count"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('gearguard.equipment', 'image', record.id.raw_value)" alt="Equipment" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <field name="category_id"/>
                                </div>
                                <ul>
                                    <li t-if="record.serial_number.raw_value">
                                        <span>Serial: <field name="serial_number"/></span>
                                    </li>
                                    <li t-if="record.maintenance_team_id.raw_value">
                                        <span>Team: <field name="maintenance_team_id"/></span>
                                    </li>
                                </ul>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="equipment_status" widget="badge" decoration-success="equipment_status == 'operational'" decoration-warning="equipment_status == 'maintenance'" decoration-danger="equipment_status == 'scrapped'"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-if="record.open_maintenance_count.raw_value > 0" class="badge text-bg-warning">
                                            <t t-esc="record.open_maintenance_count.value"/> open
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Equipment Form View -->
    <record id="view_equipment_form" model="ir.ui.view">
        <field name="name">gearguard.equipment.form</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <header>
                    <button name="action_scrap_equipment" type="object" string="Scrap Equipment" class="btn-secondary" invisible="equipment_status == 'scrapped'" confirm="Are you sure you want to scrap this equipment? This action cannot be undone."/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Smart Button: Maintenance Requests -->
                        <button name="action_view_maintenance_requests" type="object" class="oe_stat_button" icon="fa-wrench">
                            <field name="open_maintenance_count" widget="statinfo" string="Maintenance"/>
                        </button>
                    </div>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <widget name="web_ribbon" title="Scrapped" bg_color="text-bg-danger" invisible="equipment_status != 'scrapped'"/>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="code"/>
                        <h1>
                            <field name="code" readonly="1" class="me-2"/>
                        </h1>
                        <label for="name"/>
                        <h2>
                            <field name="name" placeholder="Equipment Name"/>
                        </h2>
                    </div>
                    <group>
                        <group string="General Information">
                            <field name="serial_number"/>
                            <field name="category_id"/>
                            <field name="model"/>
                            <field name="manufacturer"/>
                            <field name="location"/>
                            <field name="equipment_status" widget="badge" decoration-success="equipment_status == 'operational'" decoration-warning="equipment_status == 'maintenance'" decoration-danger="equipment_status == 'scrapped'"/>
                        </group>
                        <group string="Ownership">
                            <field name="department_id"/>
                            <field name="employee_id"/>
                            <field name="owner_user_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Purchase &amp; Warranty">
                            <field name="purchase_date"/>
                            <field name="purchase_value" widget="monetary"/>
                            <field name="warranty_expiration_date"/>
                            <field name="warranty_status" widget="badge" decoration-success="warranty_status == 'valid'" decoration-danger="warranty_status == 'expired'" decoration-muted="warranty_status == 'none'"/>
                        </group>
                        <group string="Maintenance Responsibility">
                            <field name="maintenance_team_id"/>
                            <field name="team_member_ids" invisible="1"/>
                            <field name="technician_user_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Technical Specifications" name="specifications">
                            <field name="specifications" placeholder="Enter technical specifications..."/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Internal notes..."/>
                        </page>
                        <page string="Scrap Information" name="scrap_info" invisible="equipment_status != 'scrapped'">
                            <group>
                                <field name="scrap_date"/>
                                <field name="scrap_reason"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Equipment Search View -->
    <record id="view_equipment_search" model="ir.ui.view">
        <field name="name">gearguard.equipment.search</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <search string="Equipment">
                <field name="code"/>
                <field name="name"/>
                <field name="serial_number"/>
                <field name="category_id"/>
                <field name="department_id"/>
                <field name="employee_id"/>
                <field name="maintenance_team_id"/>
                <field name="location"/>
                <separator/>
                <filter string="Operational" name="filter_operational" domain="[('equipment_status', '=', 'operational')]"/>
                <filter string="Under Maintenance" name="filter_maintenance" domain="[('equipment_status', '=', 'maintenance')]"/>
                <filter string="Scrapped" name="filter_scrapped" domain="[('equipment_status', '=', 'scrapped')]"/>
                <separator/>
                <filter string="Under Warranty" name="filter_warranty" domain="[('warranty_status', '=', 'valid')]"/>
                <filter string="Warranty Expired" name="filter_warranty_expired" domain="[('warranty_status', '=', 'expired')]"/>
                <separator/>
                <filter string="Archived" name="filter_archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Maintenance Team" name="group_team" context="{'group_by': 'maintenance_team_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'equipment_status'}"/>
                    <filter string="Location" name="group_location" context="{'group_by': 'location'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Equipment Action -->
    <record id="action_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">gearguard.equipment</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_filter_operational': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first equipment
            </p>
            <p>
                Track all your company assets: machines, vehicles, computers and more.
            </p>
        </field>
    </record>
</odoo>
