<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu -->
    <menuitem id="menu_gearguard_root"
              name="GearGuard"
              web_icon="gearguard,static/description/icon.png"
              sequence="50"/>

    <!-- Maintenance Menu -->
    <menuitem id="menu_gearguard_maintenance"
              name="Maintenance"
              parent="menu_gearguard_root"
              sequence="10"/>

    <!-- Requests Submenu -->
    <menuitem id="menu_maintenance_request"
              name="All Requests"
              parent="menu_gearguard_maintenance"
              action="action_maintenance_request"
              sequence="10"/>

    <menuitem id="menu_maintenance_request_my"
              name="My Requests"
              parent="menu_gearguard_maintenance"
              action="action_maintenance_request_my"
              sequence="20"/>

    <menuitem id="menu_maintenance_calendar"
              name="Maintenance Calendar"
              parent="menu_gearguard_maintenance"
              action="action_maintenance_request_calendar"
              sequence="30"/>

    <!-- Equipment Menu -->
    <menuitem id="menu_gearguard_equipment"
              name="Equipment"
              parent="menu_gearguard_root"
              sequence="20"/>

    <menuitem id="menu_equipment_all"
              name="All Equipment"
              parent="menu_gearguard_equipment"
              action="action_equipment"
              sequence="10"/>

    <menuitem id="menu_equipment_categories"
              name="Categories"
              parent="menu_gearguard_equipment"
              action="action_equipment_category"
              sequence="20"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_gearguard_config"
              name="Configuration"
              parent="menu_gearguard_root"
              sequence="90"
              groups="base.group_system"/>

    <menuitem id="menu_maintenance_team"
              name="Maintenance Teams"
              parent="menu_gearguard_config"
              action="action_maintenance_team"
              sequence="10"/>

    <menuitem id="menu_maintenance_stage"
              name="Stages"
              parent="menu_gearguard_config"
              action="action_maintenance_stage"
              sequence="20"/>

    <!-- Reporting Menu -->
    <menuitem id="menu_gearguard_reporting"
              name="Reporting"
              parent="menu_gearguard_root"
              sequence="80"/>

    <menuitem id="menu_maintenance_report"
              name="Maintenance Analysis"
              parent="menu_gearguard_reporting"
              action="action_maintenance_request_report"
              sequence="10"/>

    <!-- Maintenance Stage Views and Action -->
    <record id="view_maintenance_stage_tree" model="ir.ui.view">
        <field name="name">gearguard.maintenance.stage.tree</field>
        <field name="model">gearguard.maintenance.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="fold"/>
                <field name="done"/>
                <field name="is_scrap"/>
            </tree>
        </field>
    </record>

    <record id="view_maintenance_stage_form" model="ir.ui.view">
        <field name="name">gearguard.maintenance.stage.form</field>
        <field name="model">gearguard.maintenance.stage</field>
        <field name="arch" type="xml">
            <form string="Maintenance Stage">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Stage Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="fold"/>
                        </group>
                        <group>
                            <field name="done"/>
                            <field name="is_scrap"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Stage description..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_maintenance_stage" model="ir.actions.act_window">
        <field name="name">Maintenance Stages</field>
        <field name="res_model">gearguard.maintenance.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create maintenance stages
            </p>
            <p>
                Define stages like New, In Progress, Repaired, Scrap.
            </p>
        </field>
    </record>
</odoo>
