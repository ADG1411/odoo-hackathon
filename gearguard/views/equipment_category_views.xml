<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Equipment Category Tree View -->
    <record id="view_equipment_category_tree" model="ir.ui.view">
        <field name="name">gearguard.equipment.category.tree</field>
        <field name="model">gearguard.equipment.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="maintenance_team_id"/>
                <field name="equipment_count"/>
            </tree>
        </field>
    </record>

    <!-- Equipment Category Form View -->
    <record id="view_equipment_category_form" model="ir.ui.view">
        <field name="name">gearguard.equipment.category.form</field>
        <field name="model">gearguard.equipment.category</field>
        <field name="arch" type="xml">
            <form string="Equipment Category">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Category Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="maintenance_team_id"/>
                            <field name="equipment_count"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Equipment Category Search View -->
    <record id="view_equipment_category_search" model="ir.ui.view">
        <field name="name">gearguard.equipment.category.search</field>
        <field name="model">gearguard.equipment.category</field>
        <field name="arch" type="xml">
            <search string="Equipment Categories">
                <field name="name"/>
                <field name="code"/>
                <field name="maintenance_team_id"/>
                <group expand="0" string="Group By">
                    <filter string="Maintenance Team" name="group_team" context="{'group_by': 'maintenance_team_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Equipment Category Action -->
    <record id="action_equipment_category" model="ir.actions.act_window">
        <field name="name">Equipment Categories</field>
        <field name="res_model">gearguard.equipment.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first equipment category
            </p>
            <p>
                Categories help organize your equipment (e.g., Machinery, Vehicles, Computers).
            </p>
        </field>
    </record>
</odoo>
