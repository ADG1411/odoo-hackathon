<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Scheduled Action: Check Overdue Requests -->
        <record id="ir_cron_check_overdue_requests" model="ir.cron">
            <field name="name">GearGuard: Check Overdue Maintenance Requests</field>
            <field name="model_id" ref="model_gearguard_maintenance_request"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_overdue_requests()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <!-- Scheduled Action: Send Maintenance Reminders -->
        <record id="ir_cron_maintenance_reminders" model="ir.cron">
            <field name="name">GearGuard: Send Maintenance Reminders</field>
            <field name="model_id" ref="model_gearguard_maintenance_request"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_maintenance_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
